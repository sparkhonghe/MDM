package Alone;

import java.io.File;
import java.io.IOException;

/**
 *
 * @author HHU
 */
public class CpGislandResultsSta_main {
        public static void main(String args[]) throws IOException {  
        // TODO add your handling code here:
        TaskTimer timer = new TaskTimer();
        timer.start();

        String[] patternArray = new String[16];
        patternArray[0] = "ACGA";
        patternArray[1] = "ACGC";
        patternArray[2] = "ACGG";
        patternArray[3] = "ACGT";
        patternArray[4] = "CCGA";
        patternArray[5] = "CCGC";
        patternArray[6] = "CCGG";
        patternArray[7] = "CCGT";
        patternArray[8] = "GCGA";
        patternArray[9] = "GCGC";
        patternArray[10] = "GCGG";
        patternArray[11] = "GCGT";
        patternArray[12] = "TCGA";
        patternArray[13] = "TCGC";
        patternArray[14] = "TCGG";
        patternArray[15] = "TCGT";
        String inputFileFolder = "CpGisland"+File.separator+"Arabidopsis";#Arabidopsis is inputFile folder, the input files come from the results of CpG_island_searcher
        CpGislandResultsSta newone = new CpGislandResultsSta(inputFileFolder);
        Long[] patternNum = newone.StaMotif();
        
        
        String outputFile = inputFileFolder + File.separator + "Arabidopsis_PatternStaResults.txt";  #output File
        String TempStrTitle = "Motifs"+"\t"+"Number"+"\n";
        String TempStrSta = "";
        for(int i=0; i<patternNum.length; i++){
            TempStrSta = TempStrSta + patternArray[i]+"\t"+patternNum[i]+"\n";
        }
        Output.toFile(outputFile, "This file is generated by CpGislandResultsSta_main.java\n");
        Output.append(outputFile,TempStrTitle);
        Output.append(outputFile,TempStrSta);
        timer.stop();
        System.out.println("Well done!");
                
    }
}
